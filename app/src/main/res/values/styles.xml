<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="BottomSheetDialogTheme" parent="ModalBottomSheetDialog">
        <item name="android:navigationBarColor">@color/color_surface</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowLightStatusBar">false</item>
    </style>

    <style name="ModalBottomSheet" parent="Widget.MaterialComponents.BottomSheet.Modal">
        <item name="behavior_hideable">true</item>
        <item name="behavior_draggable">true</item>
        <item name="behavior_fitToContents">true</item>
        <item name="backgroundTint">@color/color_surface</item>
    </style>

    <style name="ModalBottomSheetDialog" parent="ThemeOverlay.MaterialComponents.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/ModalBottomSheet</item>
    </style>

    <style name="NavigationDrawerStyle" parent="Widget.Design.NavigationView">
        <item name="enforceMaterialTheme">true</item>
        <item name="android:listDivider">@color/list_divider</item>
        <item name="insetForeground">@android:color/transparent</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="elevation">0dp</item>
        <item name="android:elevation">0dp</item>

        <item name="itemTextColor">?attr/colorOnSurface</item>
        <item name="itemIconTint">?attr/colorPrimary</item>
        <item name="itemBackground">@drawable/nav_view_item_background</item>

        <item name="itemIconPadding">16dp</item>
        <item name="itemHorizontalPadding">16dp</item>
        <item name="itemTextAppearance">?attr/textAppearanceSubtitle2</item>
    </style>

    <style name="ShapeAppearance.KickTimer.AvatarImage" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="ShapeAppearance.KickTimer.SmallComponent" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">4dp</item>
    </style>

    <style name="ShapeAppearance.KickTimer.MediumComponent" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">8dp</item>
    </style>

    <style name="ShapeAppearance.KickTimer.LargeComponent" parent="ShapeAppearance.MaterialComponents.LargeComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">12dp</item>
    </style>

    <style name="TextAppearance.KickTimer.Headline1" parent="TextAppearance.MaterialComponents.Headline1">
        <item name="fontFamily">@font/montserrat_light</item>
        <item name="android:fontFamily">@font/montserrat_light</item>
        <item name="android:textSize">97sp</item>
    </style>

    <style name="TextAppearance.KickTimer.Headline2" parent="TextAppearance.MaterialComponents.Headline2">
        <item name="fontFamily">@font/montserrat_light</item>
        <item name="android:fontFamily">@font/montserrat_light</item>
        <item name="android:textSize">61sp</item>
    </style>

    <style name="TextAppearance.KickTimer.Headline3" parent="TextAppearance.MaterialComponents.Headline3">
        <item name="fontFamily">@font/montserrat_regular</item>
        <item name="android:fontFamily">@font/montserrat_regular</item>
        <item name="android:textSize">48sp</item>
    </style>

    <style name="TextAppearance.KickTimer.Headline4" parent="TextAppearance.MaterialComponents.Headline4">
        <item name="fontFamily">@font/montserrat_regular</item>
        <item name="android:fontFamily">@font/montserrat_regular</item>
        <item name="android:textSize">34sp</item>
    </style>

    <style name="TextAppearance.KickTimer.Headline5" parent="TextAppearance.MaterialComponents.Headline5">
        <item name="fontFamily">@font/montserrat_regular</item>
        <item name="android:fontFamily">@font/montserrat_regular</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="TextAppearance.KickTimer.Headline6" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="fontFamily">@font/montserrat_medium</item>
        <item name="android:fontFamily">@font/montserrat_medium</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="TextAppearance.KickTimer.Subtitle1" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="fontFamily">@font/montserrat_regular</item>
        <item name="android:fontFamily">@font/montserrat_regular</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextAppearance.KickTimer.Subtitle2" parent="TextAppearance.MaterialComponents.Subtitle2">
        <item name="fontFamily">@font/montserrat_semibold</item>
        <item name="android:fontFamily">@font/montserrat_semibold</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="TextAppearance.KickTimer.Body1" parent="TextAppearance.MaterialComponents.Body1">
        <item name="fontFamily">@font/raleway_regular</item>
        <item name="android:fontFamily">@font/raleway_regular</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextAppearance.KickTimer.Body2" parent="TextAppearance.MaterialComponents.Body2">
        <item name="fontFamily">@font/raleway_regular</item>
        <item name="android:fontFamily">@font/raleway_regular</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="TextAppearance.KickTimer.Button" parent="TextAppearance.MaterialComponents.Button">
        <item name="fontFamily">@font/raleway_semibold</item>
        <item name="android:fontFamily">@font/raleway_semibold</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="TextAppearance.KickTimer.Caption" parent="TextAppearance.MaterialComponents.Caption">
        <item name="fontFamily">@font/raleway_regular</item>
        <item name="android:fontFamily">@font/raleway_regular</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="TextAppearance.KickTimer.Overline" parent="TextAppearance.MaterialComponents.Overline">
        <item name="fontFamily">@font/raleway_regular</item>
        <item name="android:fontFamily">@font/raleway_regular</item>
        <item name="android:textSize">10sp</item>
    </style>

</resources>
