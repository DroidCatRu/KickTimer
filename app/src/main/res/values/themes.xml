<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Base.AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="elevationOverlayEnabled">false</item>

        <item name="colorPrimary">@color/color_primary</item>
        <!--<item name="colorPrimaryVariant">@color/color_primary_dark</item>-->
        <item name="colorOnPrimary">@color/color_on_primary</item>

        <item name="colorSecondary">@color/secondary_100</item>
        <item name="colorOnSecondary">@color/color_on_secondary</item>
        <item name="colorControlLight">@color/color_on_surface</item>
        <item name="colorControlNormal">@color/color_on_surface</item>
        <item name="colorOnSurface">@color/color_on_surface</item>
        <item name="android:colorBackground">@color/color_surface</item>
        <item name="colorOnBackground">@color/color_on_surface</item>
        <item name="colorSurface">@color/color_surface</item>

        <item name="android:windowLightStatusBar" tools:targetApi="23">@bool/use_light_status</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="27">@bool/use_light_navigation</item>
        <item name="android:navigationBarColor">@color/nav_bar_scrim</item>

        <item name="android:colorControlHighlight">@color/ripple_color_selector</item>

        <item name="shapeAppearanceSmallComponent">@style/ShapeAppearance.KickTimer.SmallComponent</item>
        <item name="shapeAppearanceMediumComponent">@style/ShapeAppearance.KickTimer.MediumComponent</item>
        <item name="shapeAppearanceLargeComponent">@style/ShapeAppearance.KickTimer.LargeComponent</item>

        <item name="textAppearanceHeadline1">@style/TextAppearance.KickTimer.Headline1</item>
        <item name="textAppearanceHeadline2">@style/TextAppearance.KickTimer.Headline2</item>
        <item name="textAppearanceHeadline3">@style/TextAppearance.KickTimer.Headline3</item>
        <item name="textAppearanceHeadline4">@style/TextAppearance.KickTimer.Headline4</item>
        <item name="textAppearanceHeadline5">@style/TextAppearance.KickTimer.Headline5</item>
        <item name="textAppearanceHeadline6">@style/TextAppearance.KickTimer.Headline6</item>
        <item name="textAppearanceSubtitle1">@style/TextAppearance.KickTimer.Subtitle1</item>
        <item name="textAppearanceSubtitle2">@style/TextAppearance.KickTimer.Subtitle2</item>
        <item name="textAppearanceBody1">@style/TextAppearance.KickTimer.Body1</item>
        <item name="textAppearanceBody2">@style/TextAppearance.KickTimer.Body2</item>
        <item name="textAppearanceButton">@style/TextAppearance.KickTimer.Button</item>
        <item name="textAppearanceCaption">@style/TextAppearance.KickTimer.Caption</item>
        <item name="textAppearanceOverline">@style/TextAppearance.KickTimer.Overline</item>
    </style>

    <style name="AppTheme" parent="Base.AppTheme" />

    <style name="AppTheme.Launcher">
        <item name="android:windowBackground">@drawable/preview_window</item>
    </style>

    <style name="Toolbar.Button.Navigation.Tinted" parent="">
        <item name="colorControlNormal">?attr/colorControlNormal</item>
        <item name="actionMenuTextColor">?attr/colorControlNormal</item>
    </style>

    <style name="AppTheme.Onboarding">
        <item name="android:windowEnterAnimation">@android:anim/fade_in</item>
        <item name="android:windowExitAnimation">@android:anim/fade_out</item>
    </style>

    <style name="NavigationDrawerNoRipple" parent="AppTheme">
        <item name="android:colorControlHighlight">@android:color/transparent</item>
        <item name="listPreferredItemHeightSmall">48dp</item>
    </style>

</resources>